@startuml Items

title Diagramme de Classes - Système d'Objets

abstract class Objet {
    #nomObjet : String

    +getNomObjet() : String
    +{abstract} utiliserObjet(Monstre) : void
    +{abstract} copyOf() : Objet
}

abstract class Potion extends Objet {
    +Potion(String)
}

abstract class Medicament extends Objet {
    +Medicament(String)
}

class PotionSante extends Potion {
    -pointsDeSoin : int

    +PotionSante(String, int)
    +utiliserObjet(Monstre) : void
    +copyOf() : PotionSante
}

class PotionDegat extends Potion {
    -pointsDeDegat : int

    +PotionDegat(String, int)
    +utiliserObjet(Monstre) : void
    +copyOf() : PotionDegat
}

class PotionVitesse extends Potion {
    -pointsDeVitesse : int

    +PotionVitesse(String, int)
    +utiliserObjet(Monstre) : void
    +copyOf() : PotionVitesse
}

class MedicamentAntiBrulure extends Medicament {
    +MedicamentAntiBrulure(String)
    +utiliserObjet(Monstre) : void
    +copyOf() : MedicamentAntiBrulure
}

class MedicamentAntiParalysie extends Medicament {
    +MedicamentAntiParalysie(String)
    +utiliserObjet(Monstre) : void
    +copyOf() : MedicamentAntiParalysie
}

class MedicamentAntiPoison extends Medicament {
    +MedicamentAntiPoison(String)
    +utiliserObjet(Monstre) : void
    +copyOf() : MedicamentAntiPoison
}

note right of Potion
  Les potions améliorent
  les statistiques des monstres
end note

note right of Medicament
  Les médicaments soignent
  les altérations de statut
end note

@enduml
